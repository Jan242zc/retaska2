{block content}
	<div class="container">
		<div class="everything-wrapper">
			<h1 class="middle">Nabídka zboží</h1>
			<div class="row">
				<div class="sidebar">
					<div class="category-list-item"><a class="button-category" n:href="Product:default">Všechny produkty</a></div>
					{foreach $categories as $category}
						<div class="category-list-item"><a class="button-category" n:href="this, $category->getId()">{$category->getName()}</a></div>
					{/foreach}
				</div>
				{control productsOnFrontendControl $currentCategory}
			</div>
		</div>	
	</div>
	